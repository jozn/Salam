<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item android:state_focused="true" android:state_pressed="true">
        <shape>
            <solid android:color="#ffb300" />
            <stroke android:width="2.3dp" android:color="#ffb300" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <solid android:color="#ffb300" />
            <stroke android:width="2.3dp" android:color="#ffb300" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="false">
        <shape>
            <solid android:color="#ffffff" />
            <stroke android:width="2.3dp" android:color="#ffb300" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="false">
        <shape>
            <gradient android:startColor="#f2f2f2" android:endColor="#ffffff" android:angle="270.0" android:centerColor="#ffffff" />
            <stroke android:width="0.7dp" android:color="#bdbdbd" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" />
        </shape>
    </item>
</selector>
