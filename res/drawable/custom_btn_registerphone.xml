<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item android:state_pressed="true">
        <shape android:shape="0">
            <corners android:radius="6dp" />
            <stroke android:width="2dp" android:color="#5a5858" />
            <gradient android:startColor="#00a650" android:endColor="#00a650" android:angle="-90.0" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="0">
            <corners android:radius="6dp" />
            <stroke android:width="1dp" android:color="#5a5858" />
            <solid android:color="#ffffff" />
        </shape>
    </item>
    <item>
        <shape android:shape="0">
            <corners android:radius="6dp" />
            <gradient android:startColor="#00a650" android:endColor="#00a650" android:angle="-90.0" />
        </shape>
    </item>
</selector>
